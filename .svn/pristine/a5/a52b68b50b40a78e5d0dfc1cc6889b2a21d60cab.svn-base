#mainContainer{
  margin-top: 10%;
  margin-bottom: 5%;
}
.miniLogo{
  text-align: center;
}
.postTheme, .sectionTitle{
  margin-top: 3%;
  text-align: center;
  font-family: "Raleway Black";
  margin-bottom: 10%;
}
@media (max-width: 981px) {
  #mainContainer{
    margin-top: 15%;
  }
}
@media (max-width: 721px) {
  #mainContainer{
    margin-top: 20%;
  }
  .postTheme h1, .sectionTitle h1{
    font-size: 3rem;
  }
}
@media (max-width: 481px) {
  #mainContainer{
    margin-top: 25%;
  }
  .postTheme h1, .sectionTitle h1{
    font-size: 5rem;
  }
}

.note-group-select-from-files {
  display: none;
}


/* form section */
#newCategorie{
  font-size: 1.3em;
  border-radius: 0px;
  padding: 15px;
  margin-bottom: 2%;
}
.transparencyBG{
  background-color: rgb(0,0,0, 0.4);
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 9;
  display:none;
}
.hoverBlock{
  z-index: 10;
  position:fixed;
  top: 20%;
  display:none;
}
.hoverForm{
  background-color: #fff;
  padding: 15px;
}
.formTitle{
  margin-bottom: 10px;
  font-family: "Raleway Black";
}
.closeFormBtn{
  color: red;
  background: none;
  border: none;
  cursor: pointer;
}
#imgPreview, .imgPreview{
  height: 150px;
}
.formBlock{
  margin-bottom:3%;
}


/* Blog Categorie Section --------------------------*/
.blogBlock{
  padding-bottom: 5%;
}
.blogImg{
    height: auto;
    width: 100%;
}
.blogTitle{
  text-align: center;
  padding: 15px;
  font-size: 1.5rem;
  color: #333;
  font-family: "Raleway";
}
.blogSquare{
  overflow: hidden;
}
.blogDate{
  color: #7f7f7f;
  font-size: 1.3em;
}
.blogSquare button{
  font-size: 1.2em;
  border-radius: 0px;
  padding: 15px;
}
@media (max-width: 981px) {

}
@media (max-width: 721px) {
  .blogTitle{
    font-size: 2.5rem;
  }
}
@media (max-width: 481px) {
  .blogSquare{
    padding-left: 15%;
    padding-right: 15%;
  }
  .blogTitle{
    font-size: 5rem;
  }
}



/* Blog Post Show Section --------------------------*/
.postContainer{
  font-size: 1.5em;
}
.postContainer #postDate{
  color: #7f7f7f;
  font-size: 1em;
  margin-bottom: 2%;
}
.imgContainer{
  /* height: 60vh; */
  overflow: hidden;
}
.postContainer #imgPost{
  width: 100%;
}
.postContainer .zoomBtn{
  margin-top: 2%;
  background-color: #fff;
  font-size: 2rem;
}
.postContainer #title{
  font-family: "Avenir Black";
  font-size: 2em;
}
.postContainer .catBtn{
  background-color: #fff;
  color: #7f7f7f;
  font-size: 1em;
  margin-bottom: 3%;
}
.postContainer .catBtn:hover{
  border: solid 1px #7f7f7f;
}

.postContainer #postMsj{
  margin-top: 1%;
}
.postContainer #postMsj p{
  margin-top: 3%;
}
.postContainer #likeBtn{
  background-color: #fff;
  cursor: pointer;
  color: #7f7f7f;
  font-size: 1rem;
}.postContainer #likeBtn:hover{
  background-color: #fff;
  cursor: pointer;
  color: #005cff;
}
.postContainer .iColor{
  color: #005cff !important;
}
.postContainer .likeBlock{
  margin-bottom: 5%;
}
.fb_iframe_widget span
{
   vertical-align: baseline !important;
}
.fb_iframe_widget{
    display:block !important;
}

@media (max-width: 721px) {
  .postContainer #postMsj{
    margin-top: 0px;
    margin-right: 10%;
    margin-left: 10%;
  }
  .postContainer #postMsj p{
    margin-top: 5%;
  }
  .postContainer .zoomBtn{
    font-size: 2.5rem;
  }
  .postContainer #likeBtn{
    font-size: 1.5rem;
  }
}
@media (max-width: 481px) {
  .imgContainer, #postMsj{
    padding-left: 0.5%;
    padding-right: 0.5%;
  }
  .imgContainer{
    height: 40vh;
    overflow: hidden;
  }
  .postContainer .zoomBtn{
    font-size: 5rem;
  }
  .postContainer #imgPost{
    width: 100%;
  }
  .postContainer #likeBtn{
    font-size: 2rem;
  }
}


.agendarCita{
  display: inline-block;
  margin-top: 3%;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 3%;
  background-color: #005cff;
  font-family: "Avenir Medium";
  text-shadow: none;
  font-size: 1.8em;
  padding:10px;
  padding-left: 25px;
  padding-right: 25px;
  border-radius: 5px;
  color:#fff;
  cursor:  pointer;
}.agendarCita #citaIcon{
  height: 25px;
  width: auto;
}.agendarLinks{
  font-size: 1.5em;
}
.ui-datepicker{
  z-index: 999!important;
}

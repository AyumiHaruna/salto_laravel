#mainContainer{
  padding-top: 8%;
  padding-bottom: 5%;
  background-size: cover;
  font-family: "Avenir Medium";
}
#title1{
  color: #4262aa;
  font-size: 5rem;
  margin-bottom: 2%;
}
.leftBlock{
  padding-left: 5%;
  padding-right: 3%;
  font-size: 1.5rem;
}
.rightBlock{
  padding-left: 3%;
  padding-right: 5%;
}
#blockMsg{
  background: #7986fc;
  background: linear-gradient(to right, #79c6fc, #6588fe);
  text-align: justify;
  padding: 8%;
  padding-top: 10%;
  padding-bottom: 10%;
  color: #fff;
}
#blockResource{
  background: #fff;
  padding: 8%;
  padding-top: 10%;
  padding-bottom: 10%;
}
#pdficon{
  width: 100%;
}










.miniLogo{
  text-align: center;
}
.postTheme, .sectionTitle{
  margin-top: 3%;
  text-align: center;
  font-family: "Avenir Black";
  margin-bottom: 5%;
}
#newCategorie{
  font-size: 1.3em;
  border-radius: 0px;
  padding: 15px;
  margin-bottom: 2%;
}
.transparencyBG{
  background-color: rgb(0,0,0, 0.4);
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 9;
  display:none;
}
.hoverBlock{
  z-index: 10;
  position:fixed;
  top: 20%;
  display:none;
}
.hoverForm{
  background-color: #fff;
  padding: 15px;
}
.formTitle{
  margin-bottom: 10px;
  font-family: "Avenir Black";
}
.closeFormBtn{
  color: red;
  background: none;
  border: none;
  cursor: pointer;
}
.formBlock{
  margin-bottom:3%;
}
.editResourceBtn, .delResourceBtn{
    background-color: #fff;
}



.grayFont{
  color: #7f7f7f;
}
.blackFont{
  color: #333;
}
.greenFont{
  color: #009933;
}
.redFont{
  color: #ff0000;
}

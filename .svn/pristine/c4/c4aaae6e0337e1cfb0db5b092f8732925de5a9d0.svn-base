#mainContainer{
  padding-top: 10%;
  margin-bottom: 5%;
}
.miniLogo{
  text-align: center;
}
.postTheme, .sectionTitle{
  margin-top: 3%;
  text-align: center;
  font-family: "Avenir Black";
  margin-bottom: 5%;
}
#newCategorie{
  font-size: 1.3em;
  border-radius: 0px;
  padding: 15px;
  margin-bottom: 2%;
}
.transparencyBG{
  background-color: rgb(0,0,0, 0.4);
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 9;
  display:none;
}
.hoverBlock{
  z-index: 10;
  position:fixed;
  top: 20%;
  display:none;
}
.hoverForm{
  background-color: #fff;
  padding: 15px;
}
.formTitle{
  margin-bottom: 10px;
  font-family: "Avenir Black";
}
.closeFormBtn{
  color: red;
  background: none;
  border: none;
  cursor: pointer;
}
.formBlock{
  margin-bottom:3%;
}
.editResourceBtn, .delResourceBtn{
    background-color: #fff;
}



.grayFont{
  color: #7f7f7f;
}
.blackFont{
  color: #333;
}
.greenFont{
  color: #009933;
}
.redFont{
  color: #ff0000;
}
